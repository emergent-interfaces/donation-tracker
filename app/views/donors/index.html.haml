%h1 Donors
%p
  = link_to add_link_text("Donor"), new_org_donor_path(@org), :class => 'btn'

= table(@donors, ["Name", ""]) do |donor, klass|
  %tr(class=klass)
    %td= link_to donor.person.name, [@org, donor]
    %td
      = link_to "<i class='icon-pencil'></i>".html_safe, edit_org_donor_path(@org, donor)
      = link_to "<i class='icon-remove'></i>".html_safe, [@org, donor], :method => "delete", :confirm => "Are you sure you want to delete this donor?"