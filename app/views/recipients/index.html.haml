%h1 Recipients
%p
  = link_to add_link_text("Recipient"), new_org_recipient_path(@org), :class => 'btn'

= table(@recipients, ["Name", ""]) do |recipient, klass|
  %tr(class=klass)
    %td= link_to recipient.person.name, [@org, recipient]
    %td
      = link_to "<i class='icon-pencil'></i>".html_safe, edit_org_recipient_path(@org, recipient)
      = link_to "<i class='icon-remove'></i>".html_safe, [@org, recipient], :method => "delete", :confirm => "Are you sure you want to delete this recipient?"