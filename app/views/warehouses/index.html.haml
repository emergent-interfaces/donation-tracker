%h1 Warehouses
%p
  = link_to add_link_text("Warehouse"), new_org_warehouse_path(@org), :class => 'btn'

= table(@warehouses, ["Name", ""]) do |warehouse, klass|
  %tr(class=klass)
    %td= link_to warehouse.name, [@org, warehouse]
    %td
      = link_to "<i class='icon-pencil'></i>".html_safe, edit_org_warehouse_path(@org, warehouse)
      = link_to "<i class='icon-remove'></i>".html_safe, [@org, warehouse], :method => "delete", :confirm => "Are you sure you want to delete this warehouse?"